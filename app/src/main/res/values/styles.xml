<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryOne</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryTwo</item>
    </style>

    <style name="customDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorBright</item>
        <item name="android:textColorPrimary">@color/colorBright</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
